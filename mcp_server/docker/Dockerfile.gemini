# syntax=docker/dockerfile:1
# Slim Graphiti MCP Server - Gemini only (no sentence-transformers/PyTorch)
# Much smaller image size (~1GB vs ~4GB)

FROM python:3.11-slim-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

ADD https://astral.sh/uv/install.sh /uv-installer.sh
RUN sh /uv-installer.sh && rm /uv-installer.sh

ENV PATH="/root/.local/bin:${PATH}"
ENV UV_COMPILE_BYTECODE=1 \
    UV_LINK_MODE=copy \
    UV_PYTHON_DOWNLOADS=never \
    MCP_SERVER_HOST="0.0.0.0" \
    PYTHONUNBUFFERED=1

WORKDIR /app/mcp

ARG GRAPHITI_CORE_VERSION=0.27.0

COPY pyproject.toml uv.lock ./

# Remove local path override and update graphiti-core version
RUN sed -i '/\[tool\.uv\.sources\]/,/graphiti-core/d' pyproject.toml && \
    sed -i "s/graphiti-core\[falkordb\]>=[0-9]\+\.[0-9]\+\.[0-9]\+$/graphiti-core[neo4j,falkordb]==${GRAPHITI_CORE_VERSION}/" pyproject.toml && \
    rm -f uv.lock && \
    uv lock

# Install base dependencies WITHOUT providers extra
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --no-group dev

# Install ONLY Gemini support (no sentence-transformers/PyTorch)
RUN --mount=type=cache,target=/root/.cache/uv \
    uv pip install google-genai>=1.8.0

RUN echo "${GRAPHITI_CORE_VERSION}" > /app/mcp/.graphiti-core-version

COPY main.py ./
COPY src/ ./src/
COPY config/ ./config/

RUN mkdir -p /var/log/graphiti

ARG MCP_SERVER_VERSION=1.0.1
ARG BUILD_DATE
ARG VCS_REF
LABEL org.opencontainers.image.title="Graphiti MCP Server (Gemini)" \
      org.opencontainers.image.description="Graphiti MCP server with Gemini LLM and embeddings support" \
      org.opencontainers.image.version="${MCP_SERVER_VERSION}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.revision="${VCS_REF}" \
      org.opencontainers.image.vendor="thebtf" \
      org.opencontainers.image.source="https://github.com/thebtf/graphiti" \
      graphiti.core.version="${GRAPHITI_CORE_VERSION}"

EXPOSE 8000

HEALTHCHECK --interval=10s --timeout=5s --start-period=15s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["uv", "run", "--no-sync", "main.py"]
